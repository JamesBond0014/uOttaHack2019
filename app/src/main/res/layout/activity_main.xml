<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@drawable/gradient"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="77dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@color/pinkish"
        android:orientation="horizontal"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/pingBtn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:srcCompat="@drawable/location"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:id="@+id/pingBtnLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Ping Location"
                android:textAlignment="center"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="84dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/recyleBtn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:srcCompat="@drawable/recyclable"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:id="@+id/recyleBtnLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Recyle"
                android:textAlignment="center"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/snapBtn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:srcCompat="@drawable/snap"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:id="@+id/snapBtnLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share With Friends"
                android:textAlignment="center"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="81dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/rewardBtn"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                app:srcCompat="@drawable/rewards"
                tools:ignore="VectorDrawableCompat"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="214dp" />

            <TextView
                android:id="@+id/rewardBtnLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Rewards "
                android:textAlignment="center"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="395dp"
        android:layout_height="508dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="3dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic[7]" />
    <com.camerakit.CameraKitView
        android:id="@+id/camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:keepScreenOn="true"/>

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="84dp"
        android:layout_height="64dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/closebtn" />

    <ImageView
        android:id="@+id/closeBtn2"
        android:layout_width="90dp"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/closebtn" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="117dp"
        android:layout_height="67dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="64dp"
        android:text="send"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/infoBoxHr"
        android:layout_width="330dp"
        android:layout_height="243dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/description"
                android:layout_width="324dp"
                android:layout_height="279dp"
                android:background="#70000000"
                android:text="This item can be dissposed blah blah"
                android:textColor="@color/cool" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>